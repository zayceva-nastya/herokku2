{
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "ci:test": [
      "@test",
      "@codestyle"
    ],
    "psalm": "psalm",
    "phpstan": "phpstan analyse -c phpstan.neon",
    "codestyle": "phpcs",
    "codestylefix": "phpcbf",
    "psalter": "psalter --issues=all",
    "test": "phpunit --testsuite alltests"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.5",
    "vimeo/psalm": "^3.12",
    "phpunit/phpunit": "^9.2",
    "phpstan/phpstan": "^0.12.33"
  },
  "require": {
    "texlab/html": "^0.08.0"
  }
}